<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:background="#AB96C5"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/main_IMG_heart1"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_heart" />

            <ImageView
                android:id="@+id/main_IMG_heart2"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_heart"/>

            <ImageView
                android:id="@+id/main_IMG_heart3"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_heart" />

            <ImageView
                android:id="@+id/main_IMG_heart4"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_heart"
                android:visibility="invisible"/>



            //TIMER//
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/main_LBL_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"

                android:text="000"
                android:textSize="40dp"/>




        </LinearLayout>


        //MATRIX//
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:background="#00BCD4"
            android:orientation="vertical">


            //row 0//
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/main_IMG_00"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="horizontal"/>

                <ImageView
                    android:id="@+id/main_IMG_01"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="horizontal"></ImageView>

                <ImageView
                    android:id="@+id/main_IMG_02"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="horizontal"></ImageView>
            </LinearLayout>



            //row 1//
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/main_IMG_10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="horizontal"></ImageView>

                <ImageView
                    android:id="@+id/main_IMG_11"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="horizontal"></ImageView>

                <ImageView
                    android:id="@+id/main_IMG_12"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="horizontal"></ImageView>
            </LinearLayout>


            //row 2 //
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/main_IMG_20"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="horizontal"></ImageView>

                <ImageView
                    android:id="@+id/main_IMG_21"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="horizontal"></ImageView>

                <ImageView
                    android:id="@+id/main_IMG_22"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="horizontal"></ImageView>
            </LinearLayout>


            //row 3 //
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/main_IMG_30"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="horizontal"></ImageView>

                <ImageView
                    android:id="@+id/main_IMG_31"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="horizontal"></ImageView>

                <ImageView
                    android:id="@+id/main_IMG_32"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="horizontal"></ImageView>
            </LinearLayout>


            //row 4 //
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/main_IMG_40"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="horizontal"></ImageView>

                <ImageView
                    android:id="@+id/main_IMG_41"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="horizontal"></ImageView>

                <ImageView
                    android:id="@+id/main_IMG_42"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="horizontal"></ImageView>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#C39ED8"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="30"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/main_BTN_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:background="@null"
                    android:src="@drawable/ic_up">

                </ImageButton>

                //ARROWS//
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="30"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/main_IMG_left"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="30"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_left" />

                <ImageButton
                    android:id="@+id/main_IMG_moon"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_moon" />

                <ImageButton
                    android:id="@+id/main_IMG_right"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:background="@null"
                    android:scaleType="fitCenter"

                    android:src="@drawable/ic_right"/>




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="30"
                android:orientation="horizontal">



                <ImageButton
                    android:id="@+id/main_BTN_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:background="@null"
                    android:src="@drawable/ic_down">

                </ImageButton>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
